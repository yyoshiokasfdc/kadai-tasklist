<div class="row">
  <aside class="col-sm-4">
    <%= form_with(model: @task) do |f| %>
      <div class="mb-3">
        <%= render 'form', task: @task %>
      </div>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <%= render 'tasks/tasks', tasks: @tasks %>
  </div>
</div>


<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>